{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "Personal Expense & Budget Tracker Web Application",
  "main": "server/server.js",
  "scripts": {
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install",
    "test": "NODE_ENV=test mocha tests/**/*.test.js --timeout 10000 --exit",
    "test:verbose": "NODE_ENV=test mocha tests/**/*.test.js --timeout 10000 --exit --reporter spec"
  },
  "keywords": [
    "expense-tracker",
    "budget",
    "finance"
  ],
  "author": "Cole Brazeal",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "concurrently": "^8.2.1",
    "jest": "^30.2.0",
    "mocha": "^11.7.5",
    "nodemon": "^3.0.1",
    "supertest": "^7.2.2"
  },
  "engines": {
  "node": "18.x"
}
}
